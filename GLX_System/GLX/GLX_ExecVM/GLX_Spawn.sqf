private ["_array","_groups"];

_array = [];

while { (True) } do
{
	_groups = (allGroups - _array);
	
	if (True) then
	{
		if (_groups isEqualTo [] ) exitWith {};
		
		_array append _groups;
		
		if (time > 0) then
		{
			[_groups] spawn GLX_Spawn_F;
		}
		else
		{
			[_groups] call GLX_Spawn_F;
		};
	};
	
	sleep 5;
};
		
		
	
	